<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_enablebt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="on"
        android:text="@string/enablebt" />

    <Button
        android:id="@+id/button_disablebt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="off"
        android:text="@string/disablebt" />

    <Button
        android:id="@+id/button_scanbt2"
        android:layout_width="190dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="deviceList"
        android:text="@string/scanbt"
        android:visibility="visible" />

    <ListView
        android:id="@+id/listViewDevice"
        android:layout_width="match_parent"
        android:layout_height="539dp"
        android:layout_below="@id/button_scanbt2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>